{
  "Description": "Example S3 Bucket with put object permissions from sandbox (Designed to be ran in prod or tooling etc.)",
  "Parameters": {
    "AWSAccount": {
      "Default": "sandbox",
      "Description": "Which AWS Account?",
      "AllowedValues": [
        "sandbox",
        "prod"
      ],
      "Type": "String"
    },
    "ProjectName": {
      "Description": "Project Name",
      "Type": "String"
    },
    "ContactEmail": {
      "Default": "awsome@awesome.net",
      "Description": "Contact Email",
      "Type": "String"
    },
    "BucketPostFix": {
      "Default": "test-x-account-write",
      "Description": "Appended to company-<AWSAccount>- to create the bucket name",
      "Type": "String"
    }
  },
  "Outputs": {
    "Bucket": {
      "Value": "S3Bucket",
      "Description": "Example S3 Bucket"
    },
    "BucketURN": {
      "Value": "S3Bucket.DomainName",
      "Description": "Example S3 Bucket URN"
    }
  },
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": [
          "-",
          [
            "company",
            "AWSAccount",
            "BucketPostFix"
          ]
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              "-",
              [
                "company",
                "AWSAccount",
                "BucketPostFix"
              ]
            ]
          },
          {
            "Key": "Project",
            "Value": "ProjectName"
          },
          {
            "Key": "Contact",
            "Value": "ContactEmail"
          }
        ]
      }
    },
    "S3BucketPolicyAccountAccess": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "S3Bucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::123456789:role/some-role/some-sub-role"
              },
              "Action": "s3:DeleteObjectVersion",
              "Resource": "arn:aws:s3:::company-prod-a-bucket-of-some-sort/*"
            },
            {
              "Effect": "Deny",
              "NotPrincipal": {
                "AWS": [
                  "arn:aws:sts::123456789:assumed-role/employee/employee-a",
                  "arn:aws:iam::123456789:root",
                  "arn:aws:sts::123456789:assumed-role/employee/employee-b",
                  "arn:aws:iam::123456789:role/some-role/some-sub-role"
                ]
              },
              "Action": "s3:DeleteObjectVersion",
              "Resource": "arn:aws:s3:::company-prod-a-bucket-of-some-sort/*"
            },
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::123456789:role/some-role/some-sub-role"
              },
              "Action": [
                "s3:DeleteObject",
                "s3:PutObject"
              ],
              "Resource": "arn:aws:s3:::company-prod-a-bucket-of-some-sort/*"
            },
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::123456789:role/some-role/some-other-sub-role",
                  "arn:aws:iam::666555444:root"
                ]
              },
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Resource": [
                "arn:aws:s3:::company-prod-a-bucket-of-some-sort/*",
                "arn:aws:s3:::company-prod-a-bucket-of-some-sort"
              ]
            },
            {
              "Effect": "Deny",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::123456789:role/some-role/some-other-sub-role",
                  "arn:aws:iam::666555444:root"
                ]
              },
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Resource": [
                "arn:aws:s3:::company-prod-a-bucket-of-some-sort/*",
                "arn:aws:s3:::company-prod-a-bucket-of-some-sort"
              ]
            }
          ]
        }
      }
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09"
}